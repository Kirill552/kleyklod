# KleyKod Backend — Переменные окружения
# Скопируйте в .env и заполните значениями

# === Приложение ===
DEBUG=true
SECRET_KEY=change-me-in-production-use-long-random-string

# === База данных (PostgreSQL) ===
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/kleykod

# === Redis ===
REDIS_URL=redis://localhost:6379/0

# === Шифрование (152-ФЗ) ===
# Сгенерируйте: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# === CORS ===
# Разделённые запятой домены
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# === Лимиты ===
FREE_TIER_DAILY_LIMIT=50
MAX_UPLOAD_SIZE_MB=50
MAX_BATCH_SIZE=10000

# === Telegram ===
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# === Файлы ===
FILE_RETENTION_HOURS=24

# === Логирование ===
LOG_LEVEL=INFO

# === VK Mini App ===
VK_GROUP_TOKEN=
VK_GROUP_ID=0
VK_APP_ID=0
VK_APP_SECRET=
ADMIN_VK_ID=0

# === VK ID OAuth (для One Tap на сайте) ===
VK_ID_APP_ID=0
VK_CLIENT_SECRET=
VK_REDIRECT_URI=https://your-domain.ru/api/auth/vk/callback

# === Секрет для бота ===
BOT_SECRET_KEY=
