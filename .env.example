# KleyKod - Environment Variables
# Скопируйте в .env и заполните значения

# ===== PostgreSQL =====
POSTGRES_USER=kleykod
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=kleykod

# Полный URL (для локальной разработки)
DATABASE_URL=postgresql+asyncpg://kleykod:your_secure_password_here@localhost:5432/kleykod

# ===== Redis =====
REDIS_URL=redis://localhost:6379/0

# ===== Telegram Bot =====
# Получите токен у @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# URL бэкенда (для бота)
API_BASE_URL=http://localhost:8000

# ===== Security (152-ФЗ) =====
# Сгенерируйте: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Сгенерируйте: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_for_jwt_here

# ===== Application =====
DEBUG=false

# Разрешённые CORS origins (через запятую)
ALLOWED_ORIGINS=http://localhost:3000,https://kleykod.ru

# ===== Limits =====
# Бесплатный лимит этикеток в день
FREE_TIER_DAILY_LIMIT=50

# Максимальный размер загружаемых файлов (MB)
MAX_UPLOAD_SIZE_MB=50

# ===== Pro Tier =====
PRO_DAILY_LIMIT=500

# ===== ЮКасса (платежи) =====
# Получить в ЛК: https://yookassa.ru/my/merchant/integration/api-keys
YOOKASSA_SHOP_ID=123456
YOOKASSA_SECRET_KEY=live_xxxxxxxxxxxxxxxxxxxxx
YOOKASSA_RETURN_URL=https://kleykod.ru/app/subscription/success

# ===== GlitchTip (мониторинг ошибок) =====
# DSN получить после создания проекта в https://errors.kleykod.ru
# Формат: https://ключ@errors.kleykod.ru/номер_проекта
SENTRY_DSN=https://your-key@errors.kleykod.ru/1

# Секретный ключ для GlitchTip (минимум 32 символа)
# Сгенерируйте: python -c "import secrets; print(secrets.token_urlsafe(32))"
GLITCHTIP_SECRET_KEY=your_glitchtip_secret_key_here
